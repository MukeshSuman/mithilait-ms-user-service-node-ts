{
	"entryFile": "src/app.ts",
	"noImplicitAdditionalProperties": "throw-on-extras",
	"controllerPathGlobs": ["src/**/*Controller.ts"],
	"spec": {
		"outputDirectory": "public",
		"specVersion": 3,
		"securityDefinitions": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		},
		"security": [{ "bearerAuth": [] }]
	},
	"routes": {
		"routesDir": "src/routes",
		"authenticationModule": "src/middlewares/authMiddleware.ts"
	},
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"]
		}
	}
}
